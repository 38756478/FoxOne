@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>系统初始化</title>
    @System.Web.Optimization.Styles.Render("~/style/common.css")
    @System.Web.Optimization.Scripts.Render("~/script/common.js")
    <style>
        html, body {
            background-color: #EEE;
        }

        .container {
            border: 1px solid #CCC;
            border-radius: 5px;
            background-color: white;
            box-shadow: inset 0 1px 0 rgba(255,255,255,.15),0 1px 1px rgba(0,0,0,.075);
            padding:50px;
        }

        .item {
            border: 1px solid #CCC;
            border-radius: 5px;
            padding: 10px;
            float: left;
            margin-left: 50px;
            box-shadow: inset 0 1px 0 rgba(255,255,255,.15),0 1px 1px rgba(0,0,0,.075);
        }
    </style>
</head>
<body>
    <div class="container">
        <a class="btn btn-primary btn-big" onclick="createTable()">创建表结构</a>
        <a class="btn btn-danger btn-big" onclick="clearTable()">清空表数据</a>
        <a class="btn btn-success btn-big" onclick="importData()">导入初始数据</a>
        <a class="btn btn-success btn-big" href="/Init/HomeIndex">跳转到首页</a>
    </div>
    <script>
        function createTable() {
            r("/Init/CreateTable", "表创建成功！");
        }
        function clearTable() {
            r("/Init/ClearTable", "表数据清空成功！");
        }
        function importData() {
            r("/Init/InitData", "导入初始数据成功！");
        }
        function r(url,message) {
            foxOne.dataService(url, {}, function (res) {
                if (res) {
                    foxOne.alert(message);
                }
            },"post",true);
        }
    </script>
</body>
</html>
